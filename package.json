{
  "name": "adcc",
  "version": "1.0.0",
  "description": "Abu Dhabi Cycling Club",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed:admin": "ts-node -r tsconfig-paths/register scripts/seed-admin.ts",
    "seed:admin:manual": "ts-node -r tsconfig-paths/register scripts/seed-admin-manual.ts",
    "seed:admin:direct": "ts-node -r tsconfig-paths/register scripts/seed-admin-direct.ts",
    "seed:demo": "ts-node -r tsconfig-paths/register scripts/seed-demo-data.ts",
    "seed:demo-data": "ts-node -r tsconfig-paths/register scripts/seed-demo-data.ts",
    "test:firebase": "ts-node -r tsconfig-paths/register scripts/test-firebase-connection.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "firebase-admin": "^13.6.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "twilio": "^5.10.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongodb": "^4.0.6",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
